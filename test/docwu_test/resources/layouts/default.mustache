<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <title>{{ page.title }}</title>
    <script type='text/javascript' src='/javascripts/application.js'></script>
    <link href="/stylesheets/application.css" media="all" rel="stylesheet" />
  </head>
  <body>
    <div id='header' class='clearfix'>
      <div class='nav wrapper'>
        <a href="/">首页</a>
      </div>
    </div>

    <div id='container' class='wrapper'>
      <div class='information'>
        <h1>{{ page.title }}</h1>
        <div class='bar'>

          {{# page.authors_any? }}
          <span class='bar-authors'>
            作者:
            {{# page.authors }}
            <a href='javascript:;'>{{ value }}</a>
            {{/ page.authors }}
          </span>
          {{/ page.authors_any? }}

          {{# page.categories_any? }}
          <span class='bar-categories'>
            分类:
            {{# page.categories }}
            <a href='javascript:;'>{{ value }}</a>
            {{/ page.categories }}
          </span>
          {{/ page.categories_any? }}

        </div>

        {{# page.tags_any? }}
        <div class='bar bar-tags'>
          标签:
          {{# page.tags }}
            <a href='javascript:;' class='button'>{{ value }}</a>
          {{/ page.tags }}
        </div>
        {{/ page.tags_any? }}
      </div>

      <div class='content'>
        {{{ page.content }}}
      </div>

    </div>

    <div id='footer'>
      <div class='wrapper'>
        <p>&copy; {{ worker.copyright.year }} {{ worker.copyright.name }}</p>
        <p>{{ worker.copyright.content }}</p>
      </div>
    </div>
  </body>
</html>
